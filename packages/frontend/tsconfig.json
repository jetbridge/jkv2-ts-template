{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build", // redirect output structure to the directory

    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "removeComments": true
  },
  "include": ["src"]
}
